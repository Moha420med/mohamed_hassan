            setTimeout(() => {
                mobileMenu.classList.add('hidden');
            }, 300); // Matches transition duration
            document.body.style.overflow = 'auto'; // Allow scrolling
        });

        mobileMenuLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.remove('active');
                setTimeout(() => {
                    mobileMenu.classList.add('hidden');
                }, 300);
                document.body.style.overflow = 'auto';
            });
        });

        // Smooth Scrolling Logic
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Terminal Typing Animation Logic
        const terminalOutput = document.getElementById('terminal-output');
        const terminalCommands = [
            "$ whoami",
            "Mohamed_Hassan",
            "$ cat /etc/certificates",
            "Cybersecurity: Red Teaming & Ethical Hacking diploma ‚úì",
            "Pentesting: eJPT Certified,eJPTv2 Diploma ‚úì",
            "Web Pentesting: Advanced Bug Bounty Secrets Diploma ‚úì",
            "Network Security: CCNA 200-301 Certified ‚úì",
            "$ commix --url=http://malicious.com/vuln.php?cmd=test --level=3",
            "[+] Testing for OS command injection...",
            "[+] Payload: cat/etc/passwd -Injection successfuly!",
            "[+] Reverse shell established: nc -lnvp 4242",
            "$ msfconsle -q -x use exploit/kali/webapp/cmd_inject",
            "$ set PAYLOAD cmd/kali/reverse; run",
            "[+] Injection exploit: Got root shell on targer!",
            "$ sudo patch -p1 < secure-input.patch",
            "‚óè [sudo] App hardened - Injection blocked",
            "   Active: active (running) ‚úì",
            "$ echo 'Command Injection Pentest Complete!'",
            "Ready for Web Exploits!",
        ];
        let commandIndex = 0;
        let charIndex = 0;
        let typingTimeout;

        function typeTerminalCommand() {
            if (commandIndex < terminalCommands.length) {
                const currentCommand = terminalCommands[commandIndex];
                if (charIndex < currentCommand.length) {
                    terminalOutput.textContent += currentCommand.charAt(charIndex);
                    charIndex++;
                    typingTimeout = setTimeout(typeTerminalCommand, 50); // Typing speed
                } else {
                    terminalOutput.textContent += '\n'; // New line after each command
                    commandIndex++;
                    charIndex = 0;
                    typingTimeout = setTimeout(typeTerminalCommand, 800); // Delay between commands
                }
            }
            // The original code already handles restarting the animation when it finishes.
            // No changes needed here for the automatic loop.
            else {
                // Restart after finishing
                setTimeout(() => {
                    terminalOutput.textContent = '';
                    commandIndex = 0;
                    charIndex = 0;
                    typeTerminalCommand();
                }, 3000); // Delay before restarting
            }
        }

        // Start terminal typing when hero section is in view
        gsap.to("#terminal-output", {
            scrollTrigger: {
                trigger: "#home",
                start: "top center",
                onEnter: () => typeTerminalCommand(),
                onLeaveBack: () => {
                    clearTimeout(typingTimeout);
                    terminalOutput.textContent = '';
                    commandIndex = 0;
                    charIndex = 0;
                },
                once: true,
            }
        });

        // Skill Progress Bar Animation Logic
        const skillBars = document.querySelectorAll('.skill-progress-bar');
        const skillObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const skillBar = entry.target;
                    const width = skillBar.getAttribute('data-width');
                    skillBar.style.transform = `scaleX(${width / 100})`;
                    skillBar.classList.add('animate');
                    skillObserver.unobserve(skillBar); // Stop observing after animation
                }
            });
        }, { threshold: 0.5 }); // Trigger when 50% of element is visible

        skillBars.forEach(bar => {
            skillObserver.observe(bar);
        });

        // Animated Backgrounds Logic
        const backgroundData = {
            network: [
                { icon: '<i class="fas fa-project-diagram"></i>', color: 'text-blue-500/10' },
                { icon: '<i class="fas fa-globe"></i>', color: 'text-green-500/10' },
                { icon: '<i class="fas fa-server"></i>', color: 'text-purple-500/10' },
                { icon: '<i class="fas fa-wifi"></i>', color: 'text-cyan-500/10' },
            ],
            cyber: [
                { icon: '<i class="fas fa-shield-alt"></i>', color: 'text-red-500/10' },
                { icon: '<i class="fas fa-lock"></i>', color: 'text-orange-500/10' },
                { icon: '<i class="fas fa-user-secret"></i>', color: 'text-yellow-500/10' },
                { icon: '<i class="fas fa-bug"></i>', color: 'text-pink-500/10' },
            ],
            code: [
                { icon: '<i class="fas fa-code"></i>', color: 'text-teal-500/10' },
                { icon: '<i class="fas fa-terminal"></i>', color: 'text-green-500/10' },
                { icon: '<i class="fas fa-database"></i>', color: 'text-blue-500/10' },
                { icon: '<i class="fas fa-laptop-code"></i>', color: 'text-indigo-500/10' },
            ]
        };

        function createBackgroundElements(container, type) {
            const currentElements = backgroundData[type];
            if (!currentElements) return;

            for (let i = 0; i < 20; i++) { // 20 elements per background
                const element = document.createElement('div');
                element.className = `background-animated-element ${currentElements[i % currentElements.length].color} type-${type}`;
                element.innerHTML = currentElements[i % currentElements.length].icon;
                
                // Set random position and icon size
                element.style.left = `${Math.random() * 100}%`;
                element.style.top = `${Math.random() * 100}%`;
                const size = 2 + Math.random() * 3; // Size between 2rem and 5rem
                element.style.fontSize = `${size}rem`;
                
                // Set animation delay
                element.style.animationDelay = `${Math.random() * 10}s`;

                container.appendChild(element);
            }
        }

        // Create backgrounds for each section
        document.querySelectorAll('.background-animation-container').forEach(container => {
            let type = 'network'; // Default type
            if (container.classList.contains('type-cyber')) type = 'cyber';
            else if (container.classList.contains('type-code')) type = 'code';
            createBackgroundElements(container, type);
        });

        // Navbar scroll effect
        const navbar = document.querySelector('nav');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) { // After scrolling 50px
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Activate active section indicator in navbar
        const navLinks = document.querySelectorAll('.nav-link');
        const sections = document.querySelectorAll('section');

        function updateActiveSection() {
            let currentActive = 'home';
            sections.forEach(section => {
                const sectionTop = section.offsetTop - navbar.offsetHeight; // Section height minus navbar height
                const sectionBottom = sectionTop + section.offsetHeight;
                if (window.scrollY >= sectionTop && window.scrollY < sectionBottom) {
                    currentActive = section.id;
                }
            });

            navLinks.forEach(link => {
                link.classList.remove('relative');
                let existingIndicator = link.querySelector('.nav-indicator');
                if (existingIndicator) {
                    existingIndicator.remove();
                }
                
                if (link.getAttribute('data-section') === currentActive) {
                    link.classList.add('relative');
                    const indicator = document.createElement('div');
                    indicator.className = 'nav-indicator absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-blue-500 to-blue-500';
                    link.appendChild(indicator);
                }
            });
        }

        window.addEventListener('scroll', updateActiveSection);
        updateActiveSection(); // Call on initial load

        // Certificate Modal Logic
        const certificateModal = document.getElementById('certificate-modal');
        const closeCertificateModalButton = document.getElementById('close-certificate-modal');
        const modalCertTitle = document.getElementById('modal-cert-title');
        const modalCertOrg = document.getElementById('modal-cert-org');
        const modalCertLevel = document.getElementById('modal-cert-level');
        const modalCertYear = document.getElementById('modal-cert-year');
        const modalCertImage = document.getElementById('modal-cert-image');

        document.querySelectorAll('.view-certificate-button').forEach(button => {
            button.addEventListener('click', function() {
                const title = this.getAttribute('data-title');
                const org = this.getAttribute('data-org');
                const level = this.getAttribute('data-level');
                const year = this.getAttribute('data-year');
                const imageUrl = this.getAttribute('data-image');

                modalCertTitle.textContent = title;
                modalCertOrg.textContent = org;
                modalCertLevel.textContent = `Level: ${level}`;
                modalCertYear.textContent = `Year: ${year}`;
                modalCertImage.src = imageUrl || '/placeholder.svg?height=400&width=600'; // Fallback placeholder

                certificateModal.classList.remove('hidden');
                document.body.style.overflow = 'hidden';
            });
        });

        closeCertificateModalButton.addEventListener('click', () => {
            certificateModal.classList.add('hidden');
            document.body.style.overflow = 'auto';
        });

        // Close modal when clicking outside
        certificateModal.addEventListener('click', (e) => {
            if (e.target === certificateModal) {
                certificateModal.classList.add('hidden');
                document.body.style.overflow = 'auto';
            }
        });
    </script>
</body>
</html>
